{
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",
  "type": "object",
  "title": "FAOSTAT API",
  "description": "",
  "definitions": {
    "api_key": {
      "type": "string",
      "title": "API Key",
      "description": "Not available in Version 1.0."
    },
    "client_key": {
      "type": "string",
      "title": "Client Key",
      "description": "Not available in Version 1.0."
    },
    "datasource": {
      "type": "string",
      "title": "Datasource",
      "description": "Name code of the datasource.",
      "enum": [
        "faostat"
      ],
      "default": "faostat"
    },
    "lang": {
      "type": "string",
      "title": "Language",
      "description": "Language of the data retrieved.",
      "enum": [
        "en",
        "fr",
        "es"
      ],
      "default": "en"
    },
    "faostat_code": {
      "type": "object",
      "title": "FAOSTAT Code",
      "description": "Code used in the FAOSTAT codelists.",
      "properties": {
        "code": {
          "$ref": "#/definitions/code"
        },
        "label": {
          "$ref": "#/definitions/label"
        },
        "ord": {
          "$ref": "#/definitions/ord"
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "children": {
          "type": "array",
          "title": "Children",
          "description": "Hierarchical codes.",
          "items": {
            "$ref": "#/definitions/faostat_code"
          }
        }
      }
    },
    "code": {
      "type": "string",
      "title": "Code",
      "description": "Object's code."
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Object's description."
    },
    "label": {
      "type": "string",
      "title": "Label",
      "description": "Object's label."
    },
    "ord": {
      "type": "integer",
      "title": "Ord",
      "description": "Object's order."
    }
  },
  "links": [
    {
      "href": "/data/",
      "method": "GET",
      "rel": "data",
      "description": "Extract and filter FAOSTAT data.",
      "title": "Data",
      "schema": {

      },
      "targetSchema": {
        "type": "object",
        "name": "Data Output",
        "description": "Output of 'data' service.",
        "properties": {
          "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Metadata for the 'data' service.",
            "properties": {
              "dsd": {
                "type": "array",
                "title": "DSD",
                "description": "Data structure definition.",
                "items": {
                  "type": "object",
                  "title": "Column",
                  "description": "Definition of the column",
                  "properties": {
                    "ord": {
                      "$ref": "#/definitions/ord"
                    },
                    "codelist": {
                      "type": "string",
                      "title": "Codelist",
                      "description": "Name of the codelist linked to this column."
                    },
                    "label": {
                      "$ref": "#/definitions/label"
                    },
                    "type": {
                      "type": "string",
                      "title": "Type",
                      "description": "Type of values of this column.",
                      "enum": [
                        "value",
                        "code",
                        "date"
                      ]
                    },
                    "key": {
                      "type": "string",
                      "title": "Key",
                      "description": "Name of the JSON key for this column."
                    }
                  }
                }
              }
            }
          },
          "data": {
            "type": "array",
            "title": "Data",
            "description": "FAOSTAT Data.",
            "items": {
              "type": "object",
              "title": "Row",
              "description": "Object representing a single row of the output."
            }
          }
        }
      }
    },
    {
      "href": "{lang}/codes/{codelist}/",
      "method": "GET",
      "rel": "codes",
      "description": "List of codes for the given codelist.",
      "title": "Codes",
      "schema": {
        "type": "object",
        "name": "Codes Input",
        "description": "Input of 'codes' service.",
        "properties": {
          "datasource": {
            "$ref": "#/definitions/datasource"
          },
          "lang": {
            "$ref": "#/definitions/lang"
          },
          "codelist": {
            "type": "string",
            "title": "Codelist",
            "description": "Name of the FAOSTAT codelist to be retrieved.",
            "enum": [
              "areas",
              "countries",
              "regions",
              "specialgroups",
              "items",
              "itemsaggregated",
              "elements",
              "years"
            ]
          },
          "domains": {
            "type": "array",
            "title": "Domains",
            "description": "List of FAOSTAT domain codes.",
            "items": {
              "$ref": "#/definitions/code"
            }
          },
          "whitelist": {
            "type": "array",
            "title": "Whitelist",
            "description": "List of codes allowed in the output.",
            "items": {
              "$ref": "#/definitions/code"
            }
          },
          "blacklist": {
            "type": "array",
            "title": "Blacklist",
            "description": "List of codes not allowed in the output.",
            "items": {
              "$ref": "#/definitions/code"
            }
          },
          "subcodelists": {
            "type": "array",
            "title": "Sub Codelists",
            "description": "List of sub codelists to be included in the output.",
            "items": {
              "$ref": "#/definitions/code"
            },
            "enum": [
              "areas",
              "countries",
              "regions",
              "specialgroups",
              "items",
              "itemsaggregated",
              "elements",
              "years"
            ]
          },
          "show_lists": {
            "type": "boolean",
            "title": "Show Lists",
            "description": "Determines whether codes representing lists must be included in the output.",
            "default": false
          },
          "show_full_metadata": {
            "type": "boolean",
            "title": "Show Full Metadata",
            "description": "Determines whether the full metadata must be included in the output. A shorter version will be used otherwise.",
            "default": true
          },
          "ord": {
            "$ref": "#/definitions/ord"
          }
        }
      },
      "targetSchema": {
        "type": "object",
        "name": "Codes Output",
        "description": "Output of 'codes' service.",
        "properties": {
          "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Metadata for the 'codes' service."
          },
          "data": {
            "type": "array",
            "title": "Codes",
            "description": "List of available codes.",
            "items": {
              "$ref": "#/definitions/faostat_code"
            }
          }
        }
      }
    },
    {
      "href": "{lang}/groups/",
      "method": "GET",
      "rel": "groups",
      "description": "List of available FAOSTAT domains.",
      "title": "Groups",
      "schema": {
        "type": "object",
        "name": "Groups Input",
        "description": "Input of 'groups' service.",
        "properties": {
          "datasource": {
            "$ref": "#/definitions/datasource"
          },
          "lang": {
            "$ref": "#/definitions/lang"
          }
        }
      },
      "targetSchema": {
        "type": "object",
        "properties": {
          "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Metadata for the 'groups' service."
          },
          "data": {
            "type": "array",
            "title": "Groups",
            "description": "List of available groups.",
            "items": {
              "$ref": "#/definitions/faostat_code"
            }
          }
        }
      }
    },
    {
      "href": "{lang}/groupsanddomains/",
      "method": "GET",
      "rel": "groupsanddomains",
      "description": "List of available FAOSTAT groups and domains.",
      "title": "Groups and Domains",
      "schema": {
        "type": "object",
        "name": "Groups and Domains Input",
        "description": "Input of 'groupsanddomains' service.",
        "properties": {
          "datasource": {
            "$ref": "#/definitions/datasource"
          },
          "lang": {
            "$ref": "#/definitions/lang"
          }
        }
      },
      "targetSchema": {
        "type": "object",
        "properties": {
          "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Metadata for the 'groupsanddomains' service."
          },
          "data": {
            "type": "array",
            "title": "Groups and Domains",
            "description": "List of available groups and domains.",
            "items": {
              "$ref": "#/definitions/faostat_code"
            }
          }
        }
      }
    }
  ]
}